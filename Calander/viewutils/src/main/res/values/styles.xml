<resources>
    <style name="Dialog_Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="My_Dialog_Fullscreen">
        <item name="android:windowBackground">@drawable/bg_my_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="My_Dialog_Fullscreen_input">
        <item name="android:windowBackground">@drawable/bg_my_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item>
    </style>
    <declare-styleable name="CircleProgressBarView">
        <attr name="progress_color" format="color" />


    </declare-styleable>
</resources>
