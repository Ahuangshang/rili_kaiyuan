<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <cn.ltwc.cft.view.TitleView
            android:id="@+id/addnote_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/addnote_addtitle"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/note_edit_bg"
            android:gravity="center"
            android:hint="@string/addnote_title"
            android:maxLength="16"
            android:padding="3dp"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="17dp"
        android:layout_marginTop="10dp" >

        <EditText
            android:id="@+id/addnote_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/note_edit_bg"
            android:gravity="top"
            android:hint="@string/addnote_content"
            android:maxLength="5000"
            android:maxLines="500"
            android:padding="3dp"
            android:singleLine="false"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>