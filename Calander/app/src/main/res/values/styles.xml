    </style>

    <style name="AnimationPopupBottom">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AnimationPopupBottomNoEnter">
        <item name="android:windowExitAnimation">@anim/load_exit_anim</item>
    </style>

    <style name="AnimationPopupBottomNoExit">
        <item name="android:windowEnterAnimation">@anim/load_exit_anim</item>
    </style>

    <style name="line_d">
        <item name="android:layout_width">match_parent</item>
